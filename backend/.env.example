# Copier ce fichier en .env et remplir les valeurs
# Ne pas committer .env (déjà dans .gitignore)

# Django
SECRET_KEY="changer en production"
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,https://e-school.africaits.com

# Base de données
# Railway fournit DATABASE_URL automatiquement en production
# Pour le développement local, choisissez une option :

# Option 1 : SQLite (simple pour le développement local)
USE_SQLITE=True

# Option 2 : PostgreSQL local (décommentez et configurez)
# DB_NAME=eschool_db
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432

# Option 3 : PostgreSQL Railway (URL publique pour connexion depuis local)
# IMPORTANT : Obtenez l'URL publique depuis Railway Dashboard → PostgreSQL → Connect → Public Network
# L'URL publique ressemble à : postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway
# DATABASE_URL=postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway

# Si vous avez l'URL interne Railway et voulez la convertir automatiquement :
#RAILWAY_PUBLIC_DATABASE_URL=postgresql://postgres:xXjnoLaFfiXhBtXqMSVLNEJpvRWvLZBO@tramway.proxy.rlwy.net:25195/railway
# Ou spécifiez juste l'hostname public :
# RAILWAY_PUBLIC_HOSTNAME=containers-us-west-xxx.railway.app

# CORS - URL du frontend en production
CORS_ALLOWED_ORIGINS=https://votre-frontend.up.railway.app

# Celery / Redis (optionnel)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@eschool.rdc

# Admin Django : URL secrète (obligatoire en production)
# En prod sur Railway : définir une valeur imprévisible, ex. secret-admin-xyz123
# L'admin sera alors à https://votre-backend.up.railway.app/<DJANGO_ADMIN_URL>/
DJANGO_ADMIN_URL=admin

# Admin initial (pour seed_initial)
# Utilisé par : python manage.py seed_initial
ADMIN_USERNAME=user-admin
ADMIN_EMAIL=support@africait.com
ADMIN_PASSWORD=ADMIN-PASSWORD
CREATE_SCHOOL=true
SCHOOL_NAME=COLLEGE VITAL MAURICE
SCHOOL_CODE=CVMA
